<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <link rel="stylesheet" href="https://unpkg.com/onsenui/css/onsenui.css">
    <link rel="stylesheet" href="https://unpkg.com/onsenui/css/onsen-css-components.min.css">
    <script src="https://unpkg.com/onsenui/js/onsenui.min.js" is:inline></script>
    <title>Pronounce it</title>
</head>
<body>
<ons-navigator swipeable id="myNavigator" page="page1.html"></ons-navigator>

<template id="page1.html">
  <ons-page id="page1">
    <ons-toolbar>
      <div class="center" style="color: dodgerblue;">Learn Vocabulary</div>
    </ons-toolbar>
<ons-row>
    <ons-col width="90%" style="margin:30px 5%">
<ons-button style="margin:15px 0; padding:20px 0;font-size:20px" id="game1" modifier="large" >Add &nbsp; <ons-icon icon="fa-pen"></ons-icon></ons-button>

<ons-button onclick='window.location.href="/pronounciation/learn"' style="margin:15px 0; padding:20px 0; font-size:20px" modifier="large">Learn &nbsp; <ons-icon icon="fa-book"></ons-icon></ons-button>
</ons-col>
</ons-row>
</ons-page>
</template>


<template id="page2.html">
    <ons-page id="page2">
      <ons-toolbar>
        <div class="left"><ons-back-button>Back</ons-back-button></div>
        <div class="center"></div>
      </ons-toolbar>
     <ons-card style="margin: 70px 10px;">
         <form onsubmit="Save(event)">
          <div class="center"><ons-input type="text" id="wordData"  placeholder="Enter Word" float modifier="underbar" style="width: 100%;margin: 20px 0; font-size:20px"></ons-input>
          </div>
          <div class="center"><ons-input type="text" id="translationData" placeholder="Enter Translation" float modifier="underbar" style="width: 100%;margin: 20px 0;font-size:20px"></ons-input>
          </div>
          <button class="button" id="save" style="margin: 30px 0;">Save</button>
          </form>
      </ons-card>
    </ons-page>
  </template>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js" integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw==" crossorigin="anonymous" is:inline></script>

    <script src="/static/js/pronunce.js" is:inline></script>

    <script>

      $("#game1").click(function(){
    $("#page1").show()	
  })	
    
  
    document.addEventListener('init', function(event) {
    var page = event.target;
  
    if (page.id === 'page1') {
      page.querySelector('#game1').onclick = function() {
        document.querySelector('#myNavigator').pushPage('page2.html', {data: {title: 'Add Vocabulary'}});
      };
  
  
    } else if (page.id === 'page2') {
      page.querySelector('ons-toolbar .center').innerHTML = page.data.title;
    }
    
   
  });
    </script>
</body>
</html>
