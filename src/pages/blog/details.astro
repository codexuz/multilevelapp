---
import Layout from '../../layouts/Layout.astro'
---
<Layout title="Blog Page">
<div id="main" class="container mx-auto px-4 min-h-screen bg-white dark:bg-gray-800">
</Layout>

  <script is:inline>

  const id = new URLSearchParams(window.location.search).get("id");
  const container = document.getElementById("main")
  const renderdetails= async ()=>{
    const res= await fetch('https://server-five-dusky.vercel.app/posts/'+ id);
    var blog= await res.json();
    const template=`
   <h1 class="text-2xl font-bold py-2 pb-3 text-gray-900 dark:text-white">${blog.title}</h1>
   <p class="text-gray-600 pt-4 dark:text-white text-md">${blog.body}</p>
`
      container.innerHTML=template
  }
  window.addEventListener("DOMContentLoaded", ()=> renderdetails())
  </script>
