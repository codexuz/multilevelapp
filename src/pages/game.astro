<template id="page5.html">
  <ons-page id="page5">
    <ons-toolbar>
      <div class="left"><ons-back-button>Back</ons-back-button></div>
      <div class="center"></div>
    </ons-toolbar>
<iframe style='width: 100%; margin: 35px 0; overflow: hidden; border: none;' src='https://www.gamestolearnenglish.com/conditional-sentences/embed.html' width='100%' height='100%' scrolling='no'></iframe>
  </ons-page>
