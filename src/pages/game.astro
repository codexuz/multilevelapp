<script src="/static/js/onsenui.min.js" is:inline></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js" integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw==" crossorigin="anonymous"  is:inline></script>
<script is:inline>

$("#game1").click(function(){
	$("#page1").show()	
})	
	

	document.addEventListener('init', function(event) {
  var page = event.target;

  if (page.id === 'page1') {
    page.querySelector('#game1').onclick = function() {
      document.querySelector('#myNavigator').pushPage('page2.html', {data: {title: 'Fast Phrases'}});
    };

    page.querySelector('#game2').onclick = function() {
      document.querySelector('#myNavigator').pushPage('page3.html', {data: {title: 'Phrasal Verbs'}});
    };

    page.querySelector('#game3').onclick = function() {
      document.querySelector('#myNavigator').pushPage('page4.html', {data: {title: 'Phrases'}});
    };

    page.querySelector('#game4').onclick = function() {
      document.querySelector('#myNavigator').pushPage('page5.html', {data: {title: 'Perfect Tense'}});
    };
  } else if (page.id === 'page2') {
    page.querySelector('ons-toolbar .center').innerHTML = page.data.title;
  }
  else if (page.id === 'page3') {
    page.querySelector('ons-toolbar .center').innerHTML = page.data.title;
  }
  else if (page.id === 'page4') {
    page.querySelector('ons-toolbar .center').innerHTML = page.data.title;
  }
  else if (page.id === 'page5') {
    page.querySelector('ons-toolbar .center').innerHTML = page.data.title;
  }
});
</script>
</body>
