---
import Layout from '../../layouts/Layout.astro'
---


<Layout title="Speaking Mock Tests">
<div class="lg:w-full  md:container flex items-center md:mx-auto md:px-4 min-h-screen bg-white pt-5 dark:bg-gray-900 dark:text-white"></div>
</Layout>


<script is:inline>

const container=document.querySelector(".container")


const renderwords= async ()=>{
    let box='';
        const res=await fetch("https://blog-seven-bay.vercel.app/speaking")
        const data=await res.json()     
        data.forEach((el)=>{
          box+=`
          <button onclick='window.location.href="/tests/tests?id=${el.id}"' class="flex flex-wrap items-center mx-2 rounded-2xl shadow-lg my-2.5 px-3 py-2 bg-blue-600 text-white dark:bg-slate-700 dark:text-white">
            <h3 class="text-sm font-bold mx-2">${el.topic}</h3>
            </button>
            `

        })
        container.innerHTML=box
    }



window.addEventListener("DOMContentLoaded", ()=> renderwords())








</script>

