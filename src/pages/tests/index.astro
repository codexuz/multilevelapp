---
import 'bootstrap/dist/css/bootstrap.css';
import Layout from '../../layouts/Layout.astro'
---


<Layout title="Speaking Mock Tests">
<div class="container flex items-center mx-auto px-4 bg-white pt-5 dark:bg-gray-900 dark:text-white"></div>
</Layout>

const container=document.querySelector(".container")


const renderwords= async ()=>{
    let box='';
        const res=await fetch("https://blog-seven-bay.vercel.app/speaking")
        const data=await res.json()     
        data.forEach((el)=>{
          box+=`
          <a href="/tests/tests?id=${el.id}" class="flex items-center mx-2 rounded-2xl shadow-lg my-2.5 px-3 py-2 bg-blue-600 text-white dark:bg-slate-700 dark:text-white">
           <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-white mx-2">
  <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zm0 8.625a1.125 1.125 0 100 2.25 1.125 1.125 0 000-2.25zM15.375 12a1.125 1.125 0 112.25 0 1.125 1.125 0 01-2.25 0zM7.5 10.875a1.125 1.125 0 100 2.25 1.125 1.125 0 000-2.25z" clip-rule="evenodd" />
</svg>


            <h3 class="text-xl font-bold mx-2">${el.topic}</h3>
            </a>
            `

        })
        container.innerHTML=box
    }



window.addEventListener("DOMContentLoaded", ()=> renderwords())

