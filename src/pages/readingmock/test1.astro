<Layout title="Mock 1">
	<div class="container mx-auto px-4"  id="container">
		<h3 id="title" class="text-2xl font-bold py-3"></h3>
		<div id="content"></div>
	</div>
      <button class="container mx-auto px-4 bg-blue-500 rounded-lg text-white text-lg py-2 mt-4 mb-2">Move to Listening</button>
</Layout>

<script src="/static/jquery.min.js" is:inline></script>
<script is:inline>


var container =document.getElementById("container")

 async function callData(){
const response= await fetch('https://xirurgabdukarim.uz/wp-json/wp/v2/mocktests/588')
const data= await response.json()
console.log(data)
document.getElementById("title").innerHTML=data.title.rendered
document.getElementById("content").innerHTML=data.content.rendered
var script=document.createElement("script")
script.src="/static/mock1.js"
document.body.appendChild(script)
}


window.addEventListener("DOMContentLoaded", ()=>{
	callData()
})
</script>
