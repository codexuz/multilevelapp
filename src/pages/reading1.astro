---
import Layout from "../layouts/Layout.astro"

let res = await fetch("https://xirurgabdukarim.uz/wp-json/wp/v2/reading1?per_page=100")
let posts = await res.json();
---
<Layout title="Part 1 Reading">
  <section>
    <h1 class="text-3xl my-3 font-bold text-center">Part 1 Exercises</h1>
    <div class="container mx-auto mb-8 px-4">
    {
      posts.map((post) => (
      
            <a class="block container mx-auto  bg-indigo-600  my-3 text-center text-2xl font-bold py-8 rounded-lg shadow-lg text-white" href={`/reading1/${post.slug}/`} set:html={post.title.rendered} />
         
      ))
    }
  </div>

  </section>
</Layout>
