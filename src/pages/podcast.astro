---
import Layout from '../layouts/Layout.astro'

let res = await fetch("https://xirurgabdukarim.uz/wp-json/wp/v2/podcasts")
let posts = await res.json();
---

<Layout title="Podcasts">

{
      posts.map((post) => (
            <a class="block container mx-auto  bg-indigo-600  my-3 text-center text-2xl font-bold py-8 rounded-lg shadow-lg text-white" href={`/podcasts/${post.slug}/`} set:html={post.title.rendered} />

      ))
    }

</Layouts>
