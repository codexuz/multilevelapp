<div class="container">
<section class="container my-3 pt-2 shadow-sm border-1" style="border: 1px solid lightgrey; border-radius: 5px;">
 <div class="row">
   <div class="col-md-5 py-3">
     <div class="card">
       <div class="card-body">
         <div class="header-question d-flex justify-content-between align-items-center">
           <span class="rounded-pill rounded-xl text-light bg-primary border-0 px-5 py-2.5">Question# <span id="que-id"></span></span>
           <div>
           <i class="fa fa-microphone text-primary mx-1" id="watch"></i></div>
         </div>
        
         <div id="question-bar">
         </div>
       </div>
     </div>
   </div>
   <!----Right side--->
   <div class="col-md-7 py-3">
     <div class="card" id="card">
       <div class="card-body">
         <div class="header-question d-flex justify-content-around align-items-center">
           <button class="btn btn-primary w-100 fw-bold py-2">
            <i class="fa fa-clock-o text-light" style="font-size:20px"></i><span class=" px-2" id="timer"></span>
           </button>
         </div>
       </div>
     </div>
   </div>
 </div>
 </section>


  
<style>

 #timer{
            font-size: 16px;
        }

    @media screen and (max-width:450px) {
         #watch{
            display: none;
        }

        #timer{
            font-size: 13px;
        }
    }

    @media screen and (max-width:350px) {
        #watch{
            display: none;
        }
        #timer{
            font-size: 12px;
        }
    }

</style>                        
